# KRA GavaConnect API Configuration
KRA_API_KEY=your_api_key_here
KRA_API_BASE_URL=https://api.kra.go.ke/gavaconnect/v1

# Environment
NODE_ENV=development

# Database (for business apps)
DATABASE_URL=postgresql://user:password@localhost:5432/kra_connect
REDIS_URL=redis://localhost:6379

# Authentication (for business apps)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# API Service Configuration (for business tier)
API_SERVICE_PORT=3000
API_SERVICE_HOST=localhost

# Payment Integration (M-Pesa)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASSKEY=
MPESA_SHORTCODE=

# Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@kra-connect.dev

# SMS Configuration (for notifications)
SMS_API_KEY=
SMS_SENDER_ID=KRA-Connect
